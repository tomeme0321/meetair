<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="post-text">
      <p class="left"><strong>Airport</strong></p>
      <p class="left"><%= @post.airport %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @post.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p>コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
    </div>
    <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
    <% if current_user.id == @post.user_id %>
      <%= link_to '編集', edit_post_path(@post) %> |
    <% end %>
    <%= link_to '戻る', posts_path %>
  </div>
</div>
