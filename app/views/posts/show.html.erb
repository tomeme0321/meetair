<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="post-text">
      <h2 class="left"><strong><%= @post.user.nickname %></strong>'s Plan</h2>
      <p class="left"><%= link_to "Profile Detail", registration_path(@post.user) %></p>
      <p class="left"><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: @post.user.id), method: 'post'%></p>
      <p class="left"><%= profile_img(@post.user) %></p>
      <br>
      <p class="left"><strong>Airport:</strong></p>
      <p class="left"><%= @post.airport %></p>
      <br>
      <p class="left"><strong>Terminal:</strong></p>
      <p class="left"><%= @post.terminal %></p>
      <br>
      <p class="left"><strong>Location:</strong></p>
      <p class="left"><%= @post.location %></p>
      <br>
      <p class="left"><strong>Purpose:</strong></p>
      <p class="left"><%= @post.purpose %></p>
      <br>
      <p class="left"><strong>Destination:</strong></p>
      <p class="left"><%= @post.destination %></p>
      <br>
      <p class="left"><strong>Company:</strong></p>
      <p class="left"><%= @post.company %></p>
      <br>
      <p class="left"><strong>Flight Date:</strong></p>
      <p class="left"><%= @post.flightdate %></p>
      <br>
      <p class="left"><strong>Flight Time:</strong></p>
      <p class="left"><%= @post.flighttime %></p>
      <br>
      <p class="left"><strong>Comment:</strong></p>
      <p class="left"><%= @post.latestcomment %></p>
      <br>
      <p class="right">
        <%= @post.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p><strong>【Comment List】</strong></p>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
    </div>
    <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
    <% if current_user.id == @post.user_id %>
      <%= link_to 'Edit', edit_post_path(@post) %> |
    <% end %>
    <%= link_to 'Back', posts_path %>
    <br><br>
  </div>
</div>
