<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10">
  <p id="notice"><%= notice %></p>
  <h1>What's Your Plan?</h1>
  <%= form_for(@post, url: choose_new_or_edit) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2>Error!!!</h2>

        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <%= msg %>
        <% end %>
        </ul>
      </div>
    <% end %>

  <%= form_for (@post) do |f| %>
    <%= f.label :aiport %>
    <%= render "select_airport", :f => f %>
    <%= f.label :terminal %>
    <%= render "select_terminal", :f => f %>
    <%= f.label :location %>
    <%= f.text_field :location, class: 'form-control',placeholder: "Not Required"  %>
    <br>
    <%= f.label :purpose %>
    <%= render "select_purpose", :f => f %>
    <%= f.label :company %>
    <%= render "select_company", :f => f %>
    <%= f.label :destination %>
    <%= f.text_field :destination, class: 'form-control', placeholder: "Not Required"  %>
    <br>
    <div class="field">
      <%= f.label :"Fligt Date" %>
        <%= f.text_field :flightdate, :class => 'datepicker' %>
    </div>
    <br>
    <%= f.label :"flight Time (approximate)" %>
    <%= render "select_flighttime", :f => f %>
    <%= f.label :Comment %>
    <%= f.text_area :latestcomment, class: 'form-control' %>
    <br>
    <%= f.submit 'post', class: 'btn btn-primary btn-block' %>
   <% end %>
  <% end %>

  <%= link_to "Back to the user list", posts_path, class: 'btn btn-warning btn-block' %>
 </div>
</div>
